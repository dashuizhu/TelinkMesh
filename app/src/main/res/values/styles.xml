<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:android="http://schemas.android.com/apk/res/android">


    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimaryDark</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>

        <item name="colorControlNormal">#e5e5e5</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:windowBackground">@color/bg_activity</item>

    </style>


    <style name="CommonButton">

        <item name="android:background">@drawable/btn_radius</item>
        <item name="android:textColor">@drawable/color_radius_btn</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_margin">4dp</item>
    </style>


</resources>