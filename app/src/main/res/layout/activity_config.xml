<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.ConfigActivity">

    <com.jtcf.lib_common.view.HeaderView
        android:id="@+id/headerView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorPrimaryDark"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/et_net"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:digits="0123456789QWERTYUIOPASDFGHJKLZXCVBNMqwertyuiopasdfghjklzxcvbnm"
        android:hint="网络名称"
        android:inputType="textPersonName"
        android:maxLength="10"
        android:padding="@dimen/activity_vertical_margin"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.3" />

    <EditText
        android:id="@+id/et_psd"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:digits="0123456789QWERTYUIOPASDFGHJKLZXCVBNMqwertyuiopasdfghjklzxcvbnm"
        android:hint="输入密码"
        android:inputType="textPersonName"
        android:maxLength="6"
        android:padding="@dimen/activity_vertical_margin"
        app:layout_constraintEnd_toEndOf="@+id/et_net"
        app:layout_constraintStart_toStartOf="@+id/et_net"
        app:layout_constraintTop_toBottomOf="@+id/et_net" />

    <Button
        android:id="@+id/btn_confirm"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="80dp"
        android:text="@string/label_confirm"
        app:layout_constraintEnd_toEndOf="@+id/et_net"
        app:layout_constraintStart_toStartOf="@+id/et_net"
        app:layout_constraintTop_toBottomOf="@+id/et_psd" />


</android.support.constraint.ConstraintLayout>